package Exercise;

public class E14_BinarySearch {

	public static int binarySearch(int arr[], int length, int value) {
		if (arr[length] == value)
			return length;
		int middle = length / 2;
		if (arr[middle] < value)
			return binarySearch(arr, middle+1, value);
		else
			return binarySearch(arr, length, value);
	}

	public static void main(String[] args) {
		int[] arr = { -4, -2, 0, 3, 10 };
		System.out.println("Index of value in array is: " + binarySearch(arr, arr.length-1, -4));
	}
}
