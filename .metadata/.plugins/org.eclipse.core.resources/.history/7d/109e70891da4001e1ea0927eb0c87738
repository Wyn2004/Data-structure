package Exercise;

import java.util.Scanner;

public class E11_MinArr {

	public static int minArr(int[] arr, int n) {
		if (n == 1)
			return arr[0];
		int min = arr[n - 1];
		if (min > minArr(arr, n - 1))
			return minArr(arr, n - 1);
		else
			return min;
	}

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int[] arr = { 0, 2, 3, 4, -9 };
		System.out.println("Result of division a and b is: " + minArr(arr, arr.length));
		scanner.close();
	}
}
